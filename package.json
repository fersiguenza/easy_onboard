{
  "name": "easy-onboard-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Easy Onboard - Monorepo containing app and NPM packages",
  "workspaces": [
    "app",
    "packages/*"
  ],
  "scripts": {
    "dev": "cd app && npm run dev",
    "build": "cd app && npm run build",
    "start": "cd app && npm start",
    "build-packages": "npm run build --workspaces",
    "publish-packages": "npm publish --workspaces --access public",
    "test": "npm test --workspaces"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourorg/easy-onboard.git"
  },
  "keywords": [
    "onboarding",
    "markdown",
    "team",
    "documentation",
    "training",
    "nextjs"
  ],
  "author": "Easy Onboard Team",
  "license": "MIT",
  "devDependencies": {
    "lerna": "^6.6.2"
  }
}
